option_settings:
  # Set Nginx as the proxy server
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx
  
  # Django application environment variables
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: backend.settings
    PYTHONPATH: /var/app/current
    SECURE_SSL_REDIRECT: "False"
    ALLOWED_HOSTS_EXTRA: "green-env-usw1.us-west-1.elasticbeanstalk.com,localhost,127.0.0.1"
  
  # Enhanced health monitoring configuration
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
    HealthCheckSuccessThreshold: Warning
  
  # Increase deployment timeout for large applications
  aws:elasticbeanstalk:command:
    Timeout: 1800