# .ebextensions/09_enhanced_health.config
files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_print_app_logs.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      
      # Print container logs
      echo "Container logs:"
      docker logs $(docker ps -q) | tail -n 50
      
      # Check health endpoint
      echo "Testing health endpoint:"
      curl -v http://localhost:8000/health/
      
      # Show network connections
      echo "Network connections:"
      netstat -tulpn | grep 8000