option_settings:
  # Use the existing dbtest endpoint for health checks
  aws:elasticbeanstalk:application:
    Application Healthcheck URL: /dbtest/
  
  # Update health check settings for the target group
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: /dbtest/
    MatcherHTTPCode: 200
    HealthCheckTimeout: 5
    HealthCheckInterval: 15

  # Ensure container port is correctly mapped (Docker specific)
  aws:elasticbeanstalk:environment:process:default:
    Port: 8000
    Protocol: HTTP